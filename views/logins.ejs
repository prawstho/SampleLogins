<html lang="en">
    <%- include('./partials/head.ejs') %>
    <body>
        <%- include('./partials/nav.ejs') %>
        <div class="logins content">
            <form action="/logins" method="POST">
                <b>Logins: </b></br> 
            <% if (theLogins.length > 0) { %>
                <% theLogins.forEach(login => { %>
                    <b><%= login.username %></b>
                    <a href="/logins/<%=login._id%>/edit?username=<%=login.username%>&email=<%=login.email%>">edit</a>
                    <a href="/logins/<%=login._id%>/delete?username=<%=login.username%>">delete</a></br> 
                    <% }) %>
            <% } %>
            </br><label>Add Login:</label></br>
            <label>Username:
                <input type="text" id="userame" name="username" value="<%= locals.username %>" required>
            </label>
            <label>Password:
                <input type="password" id="password" name="password" value="<%= locals.password %>" required>
            </label>
            <label>Email:
                <input type="email" id="email" name="email" value="<%= locals.email %>" required>
            </label>
            </br>
            <button>POST</button>
        </form>
        </div>
    </body>
    <%- include('./partials/foot.ejs') %>
</html>